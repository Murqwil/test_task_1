<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.15.xsd">

    <changeSet id="01-create_wallet_table" author="test_wallet">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="wallet"/>
            </not>
        </preConditions>
        <createTable tableName="wallet">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="balance" type="DECIMAL"/>
        </createTable>
    </changeSet>

    <changeSet id="02-create_transaction_table" author="test_transaction">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="transaction"/>
            </not>
        </preConditions>
        <createTable tableName="transaction">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="wallet_id" type="UUID"/>
            <column name="operation_type" type="varchar(10)"/>
            <column name="amount" type="DECIMAL"/>
            <column name="timestamp" type="TIMESTAMP"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
